<%- include('partials/header') %>

<body>
  <%- include('partials/navbar') %>
  <div class="container my-3">
    <hr />
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr />
    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label class="my-2">Resposta:</label>
      <textarea
        placeholder="Digite a sua resposta"
        class="form-control"
        name="corpo"
      ></textarea>
      <input
        type="hidden"
        name="pergunta"
        value="<%= pergunta.id %>"
        id=""
      />
      <button type="submit" class="btn btn-primary my-2">Responder</button>
    </form>
    <hr />
    <h3>Respostas</h3>
    <hr />
    <% respostas.forEach(resposta => { %>
    <div class="card my-3">
      <div class="card-body">
        <p><%= resposta.corpo %></p>
      </div>
    </div>

    <% })%>
  </div>
</body>
<%- include('partials/footer') %>
