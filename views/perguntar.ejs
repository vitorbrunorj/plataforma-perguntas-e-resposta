<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Guia perguntas</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary">
      <a href="/">
        <img
          class="m-2"
          src="/img/guia.png"
          alt="Logo guia do programador"
        />
      </a>
    </nav>

    <div class="container">
      <div class="card" id="formulario-pegunta">
        <div class="card-header">
          <h3 class="my-2">Realizar pergunta</h3>
        </div>
        <div class="card-body">
          <label class="my-2">Título</label>
          <form>
            <input
              type="text"
              placeholder="Título"
              class="form-control my-2"
            />
            <label class="my-2">Descrição</label>
            <textarea
              placeholder="Descreva a sua pergunta"
              class="form-control my-2"
            ></textarea>
            <button class="btn btn-primary my-2">Perguntar</button>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>

