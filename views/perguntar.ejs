<%- include('partials/header') %>

<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <div class="card" id="formulario-pegunta">
      <div class="card-header">
        <h3 class="my-2">Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <label class="my-2">Título</label>
        <form>
          <input
            type="text"
            placeholder="Título"
            class="form-control my-2"
          />
          <label class="my-2">Descrição</label>
          <textarea
            placeholder="Descreva a sua pergunta"
            class="form-control my-2"
          ></textarea>
          <button class="btn btn-primary my-2">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
